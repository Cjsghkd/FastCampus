<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/page_1"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/test_01"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="80dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="88dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/logo_fb" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|   페이스북 계정으로 로그인"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="90dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/test_02"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="130dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="138dp"
            android:layout_marginRight="60dp"
            android:src="@drawable/logo_kt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="|   카카오 계정으로 로그인"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginLeft="140dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="140dp"
            />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/arrows"
            android:layout_marginLeft="90dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="205dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원가입 건너뛰고 레시피 확인하기"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:layout_marginLeft="110dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="200dp"
            />

    </FrameLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/sandwich_bg_1"
        android:layout_marginTop="65dp"
        />

</LinearLayout>