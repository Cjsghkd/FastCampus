<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/sandwich"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/sandwich_bg_1" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sandwich"
        android:gravity="center_horizontal"
        app:layout_constraintVertical_weight="1" >

        <ImageView
            android:layout_marginTop="190dp"
            android:layout_marginBottom="115dp"
            android:layout_width="260dp"
            android:layout_height="38dp"
            android:src="@drawable/page_1" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="@drawable/blue_backgroud"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:layout_marginBottom="4dp"

            >

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="14dp"
                >

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="21dp"
                    android:src="@drawable/logo_fb"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="@color/white" />

            </LinearLayout>



            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="페이스북 계정으로 로그인"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:background="@drawable/yellow_backgroud"
            android:orientation="horizontal"
            android:paddingLeft="22dp"
            android:layout_marginBottom="16dp"
            >

            <LinearLayout
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="14dp"
                >

                <ImageView
                    android:layout_width="23dp"
                    android:layout_height="22dp"
                    android:src="@drawable/logo_kt"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="0dp" />

                <TextView
                    android:layout_width="1dp"
                    android:layout_height="24dp"
                    android:background="@color/white" />

            </LinearLayout>



            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="카카오 계정으로 로그인"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center" >

            <ImageView
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:src="@drawable/arrows"
                android:layout_marginRight="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="회원가입 건너뛰고 레시피 확인하기"
                android:textColor="@color/gray"
                android:textSize="14dp"/>

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>