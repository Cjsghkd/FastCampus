<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/sandwich"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:scaleType="fitXY"
        android:src="@drawable/sandwich_bg_1" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/sandwich"
        android:gravity="center_horizontal"
        app:layout_constraintVertical_weight="1" >

        <ImageView
            android:layout_width="236dp"
            android:layout_height="38dp"
            android:src="@drawable/page_1" />

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/blue_backgroud"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="12dp"
                android:layout_height="21dp"
                android:src="@drawable/logo_fb"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="@color/white"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="페이스북 계정으로 로그인"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="230dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@drawable/yellow_backgroud"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="23dp"
                android:layout_height="21dp"
                android:src="@drawable/logo_kt"/>

            <TextView
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:background="@color/white"
                android:layout_marginLeft="9dp"
                android:layout_marginRight="21dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="카카오 계정으로 로그인"
                android:textSize="14dp"
                android:textStyle="bold"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>